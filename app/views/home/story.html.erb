<head>
    <!-- BootStrap Latest compiled and minified CSS & JS -->
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <script src="js/bootstrap.min.js"></script>
    <script src="//developers.kakao.com/sdk/js/kakao.min.js"></script>
</head>

<style>
    .car-fit{
        background-repeat: no-repeat;
        background-size: contain;
    }
    img {
        width: 100%;
    }
</style>
<body>
    <a id="kakao-login-btn"></a>
    <a href="http://developers.kakao.com/logout"></a>

    <div id="myCarousel" class="carousel slide" data-ride="carousel" style="height:auto;">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
            <img src="/story_story.png" alt="Los Angeles">
            </div>

            <div class="item">
            <img src="/noti_sulhyeon_story.png" alt="Chicago">
            </div>

            <div class="item">
            <img src="/noti_jung_story.png" alt="New York">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <script type="text/javascript" src="components/bootstrap/dist/js/bootstrap.js">
        function init_car(){
            dev_width = (window.innerWidth > 0) ? window.innerWidth : screen.width
            dev_width = dev_width - 70;
            dev_width = dev_width.toString();

            dev_height = (window.innerHeight > 0) ? window.innerHeight : screen.height
            dev_height = dev_height - 70;
            dev_height = dev_height.toString();
            console.log(dev_width);
            console.log(dev_height);
            document.getElementById("story_car").style.width = dev_width + 'px';
            document.getElementById("story_car").style.height = dev_height + 'px';
            
        }
    </script>
    <script type='text/javascript'>
      //<![CDATA[
        // 사용할 앱의 JavaScript 키를 설정해 주세요.
        Kakao.init('<%=ENV['KAKAO_APP_KEY']%>');
        // 카카오 로그인 버튼을 생성합니다.
        Kakao.Auth.createLoginButton({
          container: '#kakao-login-btn',
          success: function(authObj) {
            alert(JSON.stringify(authObj));
          },
          fail: function(err) {
             alert(JSON.stringify(err));
          }
        });
      //]]>
    </script>
</body>
